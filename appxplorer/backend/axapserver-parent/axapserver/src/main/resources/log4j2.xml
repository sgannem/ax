<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Properties>
    <Property name="logdir">${sys:catalina.base}/logs</Property>
  </Properties>

  <Appenders>
    <RollingFile name="FILE_APP_PROVIDER" fileName="${logdir}/axappproviderserver.log"
                 filePattern="${logdir}/axappproviderserver-%d{yyyy-MM-dd}.log.gz">
      <PatternLayout>
        <Pattern>%d{ISO8601} [%t] (sid=%X{sessionId}) %-5p %c{1.}:%L %m%n</Pattern>
        <!--<Pattern>%d{ISO8601} [%t] %-5p %c{1.}:%L %m%n</Pattern>-->
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy/>
      </Policies>
    </RollingFile>

    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout>
        <Pattern>%d{ISO8601} [%t] %-5p %c{1.}:%L %m%n</Pattern>
      </PatternLayout>
    </Console>
     <ApplicationInsightsAppender name="aiAppender" />
  </Appenders>

  <Loggers>
    <Logger name="org.apache.log4j.xml" level="INFO"/>
	<Root level="trace">
      <AppenderRef ref="aiAppender"/>
    </Root>
    <Root level="INFO">
      <AppenderRef ref="FILE_APP_PROVIDER"/>
    </Root>
  </Loggers>
</Configuration>